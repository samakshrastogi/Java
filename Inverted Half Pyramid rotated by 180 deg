public class format {
    
    public static void main() {
        System.out.println("Inverted Half Pyramid");
        System.out.println("(rotated by 180 deg)");
        for(int i=1;i<=b;i++){
            for(int j=1;j<=b-i;j++){
                System.out.print(" ");
            }
            for(int j=1;j<=i;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
