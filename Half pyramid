public class format {
    
    public static void main() {
       System.out.println("Half Pyramid");
        for(int i=1;i<=b;i++){
            for(int j=1;j<=a;j++){
                if(i==j || i>j){
                    System.out.print("*");
                }else{
                    System.out.print(" ");
                }
            }
        System.out.println();    
        }
    }
}
